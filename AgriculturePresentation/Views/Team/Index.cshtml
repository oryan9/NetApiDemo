@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kullanıcılar</h4>

            <div class="table-responsive pt-3">

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Görsel</th>
                            <th>#</th>
                            <th>ID</th>
                            <th>Ad</th>
                            <th>Görev</th>
                            <th>Sil</th>

                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                
                            <td class="py-1">
                                    <img src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/images/faces/face24.jpg" class="profile-pic" alt="image" />
                            </td>
                                <td>@item.TeamID</td>
                                <td>@item.PersonName</td>
                                <td>@item.Title</td>
                                <td><a href="/Team/DeleteTeam/@item.TeamID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Team/EditTeam/@item.TeamID" class="btn btn-outline-info">Düzenle</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
                <br />

                <a href="/Team/AddTeam" class=" btn btn-outline-behance">Yeni Kullanıcı</a>



            </div>
        </div>
    </div>
</div>
