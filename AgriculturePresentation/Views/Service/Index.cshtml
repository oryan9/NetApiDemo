@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}






<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmetler</h4>
            
            <div class="table-responsive pt-3">

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                        
                    </thead>
                    <tbody>
                     @foreach (var item in Model)
                        {
                            
                            <tr>
                                @*<td class="py-1">
                                    <img src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/images/faces/face1.jpg" alt="image" />
                                </td>*@
                                <td>@item.ServiceID</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Service/EditService/@item.ServiceID" class="btn btn-outline-info">Düzenle</a></td>

                            </tr>
                        }

                 </tbody>
                </table>
                <br />
                <a href="/Service/AddService " class="btn btn-outline-behance"> Yeni Hizmet Ekle</a>
               
            </div>
        </div>
    </div>
</div>










